<%= link_to "Add/Edit Friend", user_friends_path(@user), class: "btn btn-primary" %>
<br>
<h3>New message</h3>

<%= render 'layouts/errors', object: @message %>

<%= form_for [@user, @message], class: "form-group" do |f| %>

  <div class="form-group">
    <% if !@user.friends.first.nil? %>
      <%= f.label "Select friends to send a message" %>
      <br>
      <% @user.friends.each do |user| %>
        <%= check_box_tag "user_phone[]", user.phone %>
        <%= user.name %><br>
      <% end %>
    <% end %>
  </div>

  <%= f.label :body %>
  <%= f.text_field :body, class: "form-control" %>

  <%= f.hidden_field :from, value: @user.phone %>

  <br>
  <%= f.submit class: "btn btn-success" %>
<% end %>
